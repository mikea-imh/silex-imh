{% extends 'layout.html.twig' %}
{% set active = 'site_hosting_tools' %}

{# title #}
{% block title %}{% endblock %}

{# keywords #}
{% block keywords %}{% endblock %}

{# description #}
{% block description %}{% endblock %}

{# intro #}
{% block intro %}
    {# opening #}
    {% block opening %}
    {% endblock %}
{% endblock %}

{# content #}
{% block content %}
    <div class="wrap">
        <div class="container">
            <div class="row">
                {# left_column #}
                {% block left_column %}
                {% endblock %}
                <div class="span3 offset1">
                    <div class="sales-longtail-right-column">
                        <img src="{{ app.request.basepath }}/img/site-hosting-tools/drupal-logo.png" alt="drupal logo" class="sales-page-longtail-logo" />
                        <h3 class="longtail">Recommended Hosting</h3>
                        <div class="recommended-hosting-image-vps"></div>
                        <h4 class="recommended-hosting">VPS Hosting</h4>
                        <a href="/vps-hosting" class="recommended-hosting">View Plans</a>
                        <hr class="recommended-hosting" />
                        <p>We have tutorials available in our Education Channels</p>
                        <a href="http://www.inmotionhosting.com/support/edu/drupal-7" class="btn btn-primary">VIEW TUTORIALS</a>
                    </div>
                    <div class="sales-longtail-right-column">
                        <img src="{{ app.request.basepath }}/img/awards-logo.png" alt="IMH Awards" />
                    </div>
                </div><!--  end span3 (right column)  -->
            </div><!--  end row  -->
        </div><!--  end container  -->
    </div><!--  end wrap  -->
{% endblock %}