{# keywords #}
{% block keywords %}{% endblock %}

{# description #}
{% block description %}{% endblock %}

{# intro #}
{% block intro %}
    {# opening #}
    {% block opening %}
    {% endblock %}
{% endblock %}

{# content #}
{% block content %}
    <div class="wrap">
        <div class="container">
            {# left_column #}
            {% block left_column %}
            {% endblock %}
